<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.t_robop.otaka.quizapp.Quiz2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q2:KDDI株式会社の社長の名前は？"
        android:id="@+id/textV2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/Q2A"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Q2Abutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/Q2B"
        android:layout_below="@+id/Q2A"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Q2Bbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/Q2C"
        android:layout_below="@+id/Q2B"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Q2Cbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/Q2D"
        android:layout_below="@+id/Q2C"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Q2Dbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="孫正義"
        android:id="@+id/q2tvA"
        android:layout_above="@+id/Q2B"
        android:layout_toRightOf="@+id/Q2A"
        android:layout_toEndOf="@+id/Q2A"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="田中孝司"
        android:layout_above="@+id/Q2C"
        android:layout_toRightOf="@+id/Q2B"
        android:layout_toEndOf="@+id/Q2B"
        android:id="@+id/q2tvB"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加藤薫"
        android:id="@+id/q2tvC"
        android:layout_above="@+id/Q2D"
        android:layout_toRightOf="@+id/Q2C"
        android:layout_toEndOf="@+id/Q2C"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="エリック・ガン"
        android:id="@+id/q2tvD"
        android:layout_alignBottom="@+id/Q2D"
        android:layout_toRightOf="@+id/Q2D"
        android:layout_toEndOf="@+id/Q2D"
        android:textSize="30dp" />
</RelativeLayout>
